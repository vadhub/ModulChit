<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TableLayout
        android:id="@+id/table_fe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:stretchColumns="0,1,2,3,4,5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewAfe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewMfe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewNfe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewPfe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="p"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewRfe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="r"
                android:gravity="center"
                style="@style/theme_chit"
                />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/subItemFE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/table_fe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp">
        <TextView
            android:id="@+id/extra_fe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ffff"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>