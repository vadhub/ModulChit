<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/modulechit_style"
    tools:context=".screens.rsa.alphavite.AddAlphaviteFragment">

    <Button
        android:id="@+id/btnNetx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/next"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </Button>

    <EditText
        android:id="@+id/textViewNumberFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/first_number"
        android:ems="4"
        style="@style/theme_chit"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutEncrypt">

        <RadioButton
            android:id="@+id/radioButtonEncrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:checked="true"
            android:text="@string/encrypt" />

        <RadioButton
            android:id="@+id/radioButtonDecrypt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/decrypt" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayoutEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textViewNumberFirst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/theme_chit"
            android:text="p: " />

        <EditText
            android:id="@+id/editTextNumberP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/theme_chit"
            android:ems="3"
            android:gravity="center"
            android:hint="p"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView17"
            style="@style/theme_chit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="q: " />

        <EditText
            android:id="@+id/editTextNumberQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="q"
            style="@style/theme_chit"
            android:ems="3"
            android:inputType="number" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerAlphabyte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp" />

        <ProgressBar
            android:id="@+id/progressBarAlpha"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNumberFirst"
        app:layout_constraintEnd_toStartOf="@+id/btnNetx"
        />

</androidx.constraintlayout.widget.ConstraintLayout>