<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_gcd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:stretchColumns="0,1,2,3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textViewAn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewBn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewQn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="q"
                android:gravity="center"
                style="@style/theme_chit"
                />

            <TextView
                android:id="@+id/textViewRn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="r"
                android:gravity="center"
                style="@style/theme_chit"
                />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/subItemGCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/table_gcd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/extra_gcd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ffff"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>