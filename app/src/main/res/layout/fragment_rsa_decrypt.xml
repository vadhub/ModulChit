<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frahments.rsa.FragmentRSAdecrypt">

    <EditText
        android:id="@+id/editTextCodeDecrypt"
        style="@style/theme_chit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="[132, 345, 2, 35]"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/editTextCodeDecrypt">

        <TextView
            android:id="@+id/textView14"
            style="@style/theme_chit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="d: " />

        <EditText
            android:id="@+id/editTextDdecript"
            style="@style/theme_chit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:hint="17"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView15"
            style="@style/theme_chit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n: "/>

        <EditText
            android:id="@+id/editTextNdecrypt"
            style="@style/theme_chit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center"
            android:hint="21"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonDecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textViewResultDecrypt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        style="@style/theme_chit"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDecrypt" />

</androidx.constraintlayout.widget.ConstraintLayout>